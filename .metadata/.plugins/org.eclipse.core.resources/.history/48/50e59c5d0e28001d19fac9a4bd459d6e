import java.util.Scanner;

public class Exam_08 {
	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		
		System.out.print("무기를 선택: 1.칼 2.권총 3.주먹 4.소총: ");
		int select = in.nextInt();
		
		switch(select) {
		case 1 : System.out.print("칼을 선택하셨습니다.");
		case 2 : System.out.print("권총을 선택하셨습니다.");
		case 3 : System.out.print("주먹을 선택하셨습니다.");
		case 4 : System.out.print("소총을 선택하셨습니다.");
		default : System.out.print("잘못 선택하셨습니다.");
		}
		
		/*
