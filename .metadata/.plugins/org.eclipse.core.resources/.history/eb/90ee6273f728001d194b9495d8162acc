import java.util.Scanner;

/*
 * 가위바위보 게임 만들기
 * 컴퓨터가 가위바위보 중 하나를 선택
 * 사용자는 키보드로 선택을 해서 결과를 알려주는 프로그램
 * 1.가위 2.바위 3.보 4.종료:
 */
public class Exam_15 {
	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		System.out.println("가위, 바위, 보!");
		
		while(true) {
			System.out.println("1.가위 2.바위 3.보 4.종료");
			int comsu = (int)(Math.random()*3)+1; // pc의 선택 가위, 바위, 보
			int select = in.nextInt();
			System.out.println("컴:" + comsu);
			System.out.println("나:" + select);
			
			if (select == 4) break;
			else if (select == 1) {
				if (comsu == 2) System.out.print("패배");
				else if (comsu == 3) System.out.print("승리");
				else if (comsu == 1) System.out.print("비김");
			
			}else if (select == 2) {
				if (comsu == 3) System.out.print("패배");
				else if (comsu == 1) System.out.print("승리");
				else if (comsu == 2) System.out.print("비김");
			
			}else if (select == 3) {
				if (comsu == 1) System.out.print("패배");
				else if (comsu == 2) System.out.print("승리");
				else if (comsu == 3) System.out.print("비김");
			}

			}
		System.out.print("게임을 종료합니다.");
		}
	}